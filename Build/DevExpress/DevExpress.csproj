<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DevExpress.Pdf.SkiaRenderer" Version="23.1.3" />
		<PackageReference Include="DevExpress.AspNetCore.Reporting" Version="23.1.3" />		
		<PackageReference Include="SkiaSharp" Version="2.88.3" />
		<PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="2.88.3" />
		<PackageReference Include="DevExpress.Drawing.Skia" Version="23.1.3" />
	</ItemGroup>

	<ItemGroup>
		<Items Include="$(OutputPath)/**">
		</Items>
	</ItemGroup>

	<Target Name="CopyPackages" AfterTargets="PostBuildEvent">
                <Exec Command="mkdir -p &quot;/src/plugins/&quot;" />
		<Copy SourceFiles="@(Items)" DestinationFolder="/src/plugins/%(RecursiveDir)" SkipUnchangedFiles="true" />
		<Exec Command="echo $(OutputPath)" />
	</Target>

</Project>
