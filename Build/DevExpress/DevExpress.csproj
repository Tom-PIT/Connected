<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DevExpress.Pdf.SkiaRenderer" Version="22.2.*-*" />
		<PackageReference Include="DevExpress.AspNetCore.Reporting" Version="22.2.*-*" />		
		<PackageReference Include="SkiaSharp" Version="2.88.3" />
		<PackageReference Include="SkiaSharp.NativeAssets.Linux.NoDependencies" Version="2.88.3" />
		<PackageReference Include="DevExpress.Drawing.Skia" Version="22.2.*-*" />
	</ItemGroup>

	<ItemGroup>
		<Items Include="$(OutputPath)*.dll">
		</Items>
	</ItemGroup>

	<Target Name="CopyPackages" AfterTargets="Build">
		<Copy SourceFiles="@(Items)" DestinationFolder="/src/plugins/" />
	</Target>

</Project>
