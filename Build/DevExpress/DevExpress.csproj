<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DevExpress.AspNetCore.Reporting" Version="22.2.6" />
	</ItemGroup>

	<ItemGroup>
		<Items Include="$(NuGetPackageRoot)/dev*/22.2.6/lib/netstandard2.0/*.dll">
		</Items>
	</ItemGroup>

	<Target Name="CopyPackages" AfterTargets="Build">
		<Copy SourceFiles="@(Items)" DestinationFolder="/src/plugins/" />
	</Target>

</Project>
