<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AssemblyVersion>1.1.715.2</AssemblyVersion>
    <FileVersion>1.1.715.2</FileVersion>
    <Version>1.1.715.2</Version>
  </PropertyGroup>
  <PropertyGroup>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="bundleconfig.json" />
    <None Remove="wwwroot\assets\reporting.design.min.css" />
    <None Remove="wwwroot\assets\reporting.design.min.js" />
    <None Remove="wwwroot\assets\reporting.min.css" />
    <None Remove="wwwroot\assets\reporting.min.js" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="bundleconfig.json" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="wwwroot\assets\reporting.design.min.css" />
    <EmbeddedResource Include="wwwroot\assets\reporting.design.min.js" />
    <EmbeddedResource Include="wwwroot\assets\reporting.min.css" />
    <EmbeddedResource Include="wwwroot\assets\reporting.min.js" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="DevExpress.AspNetCore.Reporting" Version="19.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.2.0" />
    <PackageReference Include="Microsoft.NET.Sdk.Razor" Version="2.2.0" PrivateAssets="All" />
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Core\TomPIT.ComponentModel\TomPIT.ComponentModel.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System">
      <HintPath>System</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="package.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>package.json</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="package.json">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>package.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy &quot;$(TargetPath)&quot; &quot;c:\Deploy\Plugins\TomPIT.Templates.Reporting&quot;&#xD;&#xA;copy &quot;$(TargetDir)$(TargetName).Views.dll&quot; &quot;c:\Deploy\Plugins\TomPIT.Templates.Reporting&quot;" />
  </Target>
</Project>