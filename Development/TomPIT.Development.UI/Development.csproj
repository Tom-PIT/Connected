		</Reference>
		<Reference Include="TomPIT.UI">
			<HintPath>c:\bin2\TomPIT.UI.dll</HintPath>
		</Reference>
	</ItemGroup>

  <ItemGroup>
    <Content Update="Views\Ide\Designers\Upload.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
    <Content Update="Views\ApiTest.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
