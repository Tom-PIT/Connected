  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>TomPIT</RootNamespace>
    <AssemblyName>TomPIT.Development.App</AssemblyName>
  </PropertyGroup>
	<PropertyGroup>
		<PublishWithAspNetCoreTargetManifest>false</PublishWithAspNetCoreTargetManifest>
	</PropertyGroup>
	<ItemGroup>
	  <Content Remove="compilerconfig.json" />
	  <Content Remove="wwwroot\Assets\Styles\development.less" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="lz4net" Version="1.0.15.93" />
		<PackageReference Include="Microsoft.AspNetCore.App" />
		<PackageReference Include="BuildBundlerMinifier" Version="2.8.391" />
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="1.1.0" />
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client.Core" Version="1.1.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.Common" Version="2.10.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.Scripting" Version="2.10.0" />
  </ItemGroup>

	<ItemGroup>
		<Reference Include="TomPIT.ComponentModel">
			<HintPath>c:\bin2\TomPIT.ComponentModel.dll</HintPath>
		</Reference>
		<Reference Include="TomPIT.Core">
			<HintPath>c:\bin2\TomPIT.Core.dll</HintPath>
		</Reference>
		<Reference Include="TomPIT.Extensions">
			<HintPath>c:\bin2\TomPIT.Extensions.dll</HintPath>
		</Reference>
		<Reference Include="TomPIT.DataProviders.Sql">
